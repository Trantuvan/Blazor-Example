@inject HttpClient HttpClient

<div class="dialog-container">
    <div class="dialog">
        <div class="dialog-title">
            <h2>@Pizza.Special.Name</h2>
            @Pizza.Special.Description
        </div>
        <form class="dialog-body">
            <div>
                <label for="size">Size:</label>
                <input type="range" name="size" id="size" min="@Pizza.MinimumSize" max="@Pizza.MaximumSize" step="1" />
                <span class="size-label">
                    @Pizza.Size" (£@Pizza.GetFormattedTotalPrice())
                </span>
            </div>
        </form>
        <div class="dialog-buttons">
            <button class="btn btn-secondary mr-auto" @onclick="OnCancelled">Cancel</button>
            <span class="mr-center">
                Price: <span class="price">@Pizza.GetFormattedTotalPrice()</span>
            </span>
            <button class="btn btn success ml-auto" @onclick="OnConfirmed">Order > </button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Pizza Pizza { get; set; }

    [Parameter]
    public EventCallback OnCancelled { get; set; }

    [Parameter]
    public EventCallback OnConfirmed { get; set; }
}
